<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
    tools:context="com.guilherme.getherfy.activity.LoginActivity">

    <ImageButton
        android:id="@+id/activity_login_voltarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/activity_login_logo"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_login_logo"
        app:srcCompat="@drawable/ic_voltar_azul" />

    <EditText
        android:id="@+id/activity_login_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:hint="Insira sua senha"
        android:inputType="textWebPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_email"
        app:layout_constraintVertical_bias="0.050000012" />

    <EditText
        android:id="@+id/activity_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:hint="Insira seu email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_logo"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/activity_cadastrar_btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_style"
        android:paddingHorizontal="10dp"
        android:text="ENTRAR"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_senha"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/activity_login_logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="@drawable/gatherfy2"
        android:src="@drawable/gatherfy2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gatherfy2" />

    <TextView
        android:id="@+id/activity_login_linkCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linkCadastrar"
        android:textColor="#0A1FA3"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_cadastrar_btnLogin" />

    <ImageButton
        android:id="@+id/activity_login_btn_view_password"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/activity_login_senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/activity_login_senha"
        app:layout_constraintTop_toTopOf="@+id/activity_login_senha"
        app:layout_constraintVertical_bias="0.521"
        app:srcCompat="@drawable/ic_view_password" />

    <ImageView
        android:id="@+id/login_senha_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_login_senha"
        app:layout_constraintEnd_toStartOf="@+id/activity_login_senha"
        app:layout_constraintTop_toTopOf="@+id/activity_login_senha"
        app:srcCompat="@drawable/ic_password" />

    <ImageView
        android:id="@+id/login_email_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_login_email"
        app:layout_constraintEnd_toStartOf="@+id/activity_login_email"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_login_email"
        app:srcCompat="@drawable/ic_email" />

</androidx.constraintlayout.widget.ConstraintLayout>