<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guilherme.getherfy.activity.PrimeiraTelaActivity">

    <TextView
        android:id="@+id/activity_primeira_tela_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crie uma conta"
        android:textColor="#0A1FA3"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_primeira_tela_apresentacao"
        app:layout_constraintTop_toBottomOf="@+id/activity_primeira_tela_apresentacao"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/activity_primeira_tela_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entre aqui"
        android:textColor="#0A1FA3"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_primeira_tela_pergunta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/activity_primeira_tela_pergunta"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/activity_primeira_tela_pergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Já possui uma conta?"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_primeira_tela_cadastro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/activity_primeira_tela_apresentacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="Organize suas reuniões e apresentações de forma prática. Para isso,"
        android:textColor="#020000"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002" />

    <ImageView
        android:id="@+id/activity_primeira_tela_logo"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_primeira_tela_apresentacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gatherfy2" />

</androidx.constraintlayout.widget.ConstraintLayout>