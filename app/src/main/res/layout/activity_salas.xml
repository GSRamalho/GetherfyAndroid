<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:theme="@style/AppTheme2"
    tools:context=".activity.ListaSalasActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_salas_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_salas_empresaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Empresa"
        android:textColor="#FAFFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/activity_salas_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_salas_lista"
        app:layout_constraintTop_toTopOf="@+id/activity_salas_toolbar" />

    <ListView
        android:id="@+id/activity_salas_lista"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_salas_toolbar"
        tools:listitem="@layout/item_sala">

    </ListView>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_reservas"
        app:layout_constraintBottom_toBottomOf="@+id/activity_salas_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/activity_salas_toolbar"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toEndOf="@+id/activity_salas_empresaText"
        app:layout_constraintTop_toTopOf="@+id/activity_salas_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>